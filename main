class Kata {
  public static String getMiddle(String word) {
    //Code goes here!
    if (word.length() % 2 == 0) {
      return Character.toString(word.charAt(word.length() / 2 - 1)) + Character.toString(word.charAt(word.length() / 2));
    }
    else {
      return Character.toString(word.charAt(word.length() / 2));
    }
  }
}
